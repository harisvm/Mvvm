<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".AddEditNoteActivity">    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_margin="10dp">        <TextView            android:id="@+id/priority_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/edt_description"            android:layout_marginTop="10dp"            android:text="Priority"            android:textStyle="bold"></TextView>        <NumberPicker            android:id="@+id/numberPicker"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/priority_txt"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:layout_marginEnd="8dp"            android:layout_marginBottom="8dp" />        <EditText            android:id="@+id/edt_title"            android:layout_width="100dp"            android:layout_height="wrap_content"            android:layout_gravity="start"            android:hint="Title"            android:maxLines="1"            android:textAppearance="@style/TextAppearance.AppCompat.Large" />        <EditText            android:id="@+id/edt_description"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/edt_title"            android:hint="description" />    </RelativeLayout></LinearLayout>